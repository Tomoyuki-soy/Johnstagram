<%= form_with model: @post do |form| %>
  <% if @post.errors.any? %>
    <div>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :point_name, "ポイント名" %><br>
    <%= form.text_field :point_name %>
  </div>
  
  <div>
    <%= form.label :size, "サイズ" %><br>
    <%= form.text_field :size %>
  </div>
  
  <div>
    <%= form.label :score, "点数" %><br>
    <%= form.number_field :score %>
  </div>
  
  <div>
    <%= form.label :comment, "コメント" %><br>
    <%= form.text_area :comment %>
  </div>
  
   <div>
    <%= form.label :memo, "自分用メモ" %><br>
    <%= form.text_area :memo %>
  </div>
  
  <div>
    <%= form.submit "投稿" %>
  </div>

<% end %>