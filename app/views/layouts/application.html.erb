<!DOCTYPE html>
<html>
  <head>
    <title>Johnstagram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="p-3 bg-dark text-white">
      <div class="container">
        <div class="text-start">
          <%= link_to root_path do %>
            <h1 style="color: white; font-family: cursive; display: inline-block;">Johnstagram</h1>
          <% end %>
        </div>
        <div class="d-flex flex-wrap align-items-center justify-content-lg-end">
          <div class="text-right">
            <% if user_signed_in? %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-outline-light" %>
              <%= link_to "マイページ", user_path(current_user.id), class:"btn btn-outline-light" %>
              <%= link_to '投稿', new_post_path, class:"btn btn-success" %>
            <% else %>
              <%= link_to 'ログイン', new_user_session_path, class:"btn btn-outline-light" %>
              <%= link_to '新規登録', new_user_registration_path, class:"btn btn-warning" %>
              <%= link_to 'ゲストログイン（閲覧用）', guests_guest_sign_in_path, method: :post, class:"btn btn-light" %>
            <% end %>
          </div>
        </div>
      </div>
    </header>
    <%= yield %>



  </body>




