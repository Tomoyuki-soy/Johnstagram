<h1>トップページ</h1>
<table>
  <tr>
    <th>投稿者</th>
    <th>ポイント名</th>
    <th>サイズ</th>
    <th>点数</th>
    <th>コメント</th>
    <th>自分用メモ</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.user.username %></td>
      <td><%= post.point_name %></td>
      <td><%= post.size %></td>
      <td><%= post.score %></td>
      <td><%= post.comment %></td>
      <td><%= post.memo %></td>
      <td><%= link_to '詳細', post_path(post) %></td>
      <td><%= post.updated_at.strftime("%y年%m月%d日") %></td>
    </tr>
  <% end %>
</table>


