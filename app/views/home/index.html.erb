 
<!--<h1>トップページ</h1>-->

 <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
          <div class="container">
            <div>
              <h1 class="fw-light">ようこそ！Johnstagramへ！</h1>
              <p class="lead text-muted">This is an innovative service for you. Write down what you felt in your daily practice here and use it for your surfing life.</p>
            </div>
          </div>  
        </div>
      </div>
  </section>
<div class="py-5 bg-light">
  <div class="container">
    <div class="row">
  
      <% @posts.each do |post| %>
        
        <div class="col-md-4" style="margin: 20px 0;">
          <div class="card shadow-sm"> 
            <div class="card-body">
              <p class="text-end"><%= post.user.username %></p>
              <div class="text-center">
                <h3>
                  <span><%= post.point_name %>・</span>
                  <span><%= post.size %>・</span>
                  <span><%= post.score %></span>
                </h3>  
                <p><%= post.comment.truncate(50) %></p>
                <div class="text-muted">
                  <small>メモ:</small>
                    <% if user_signed_in? %>
                       <% if post.status == "1" %>
                         <span style="padding-right: 20px;">公開中</span>
                       <% else %>
                         <span style="padding-right: 20px;">非公開</span>
                       <% end %>
                    <% end %> 
                  <small><%= post.updated_at.strftime("%Y年-%m月-%d日") %></small>
                  <span style="padding-left: 20px;"><%= link_to "詳細", post_path(post), class:"btn btn-outline-success btn-sm" %></span>
                </div>  
              </div>
            </div>  
          </div>  
        </div> 
      <% end %>
    </div>
  </div>    
</div>


<%= paginate @posts %>

